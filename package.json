{
  "name": "lionheart-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3004 -H 127.0.0.1",
    "build": "prisma generate && next build",
    "postinstall": "prisma generate && npm run hooks:install",
    "start": "next start",
    "lint": "next lint",
    "check:env": "node scripts/check-env.mjs",
    "auth:secret": "node scripts/generate-auth-secret.mjs",
    "build:deploy": "npm run check:env && npm run build",
    "check:architecture": "node scripts/check-architecture.mjs",
    "check:architecture:staged": "node scripts/check-architecture.mjs --staged",
    "hooks:install": "node scripts/install-githooks.mjs",
    "db:generate": "prisma generate",
    "db:push": "dotenv -e .env.local -e .env -- prisma db push",
    "db:push:remote": "dotenv -e .env -- prisma db push",
    "db:migrate": "dotenv -e .env.local -e .env -- prisma migrate dev",
    "db:migrate:remote": "dotenv -e .env -- prisma migrate deploy",
    "db:studio": "dotenv -e .env.local -e .env -- prisma studio",
    "db:studio:remote": "dotenv -e .env -- prisma studio",
    "db:seed": "dotenv -e .env.local -e .env -- tsx prisma/seed.ts",
    "db:seed:remote": "dotenv -e .env -- tsx prisma/seed.ts",
    "smoke:campus": "node scripts/smoke-campus-auth-crud.mjs",
    "smoke:set-password": "node scripts/smoke-set-password.mjs",
    "smoke:all": "node scripts/smoke-roles-teams.mjs && node scripts/smoke-settings-permissions.mjs && node scripts/smoke-campus-auth-crud.mjs && node scripts/smoke-set-password.mjs && node scripts/test-ui-permissions.mjs",
    "smoke:settings": "node scripts/smoke-settings-all.mjs",
    "smoke:it": "npm run smoke:campus"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@google/genai": "^1.40.0",
    "@prisma/client": "^5.22.0",
    "@supabase/supabase-js": "^2.49.1",
    "@tanstack/react-query": "^5.90.21",
    "@vercel/speed-insights": "^1.3.1",
    "bcryptjs": "^3.0.3",
    "canvas-confetti": "^1.9.3",
    "framer-motion": "^12.34.3",
    "jose": "^6.1.3",
    "lucide-react": "^0.564.0",
    "next": "^15.1.0",
    "next-auth": "^5.0.0-beta.25",
    "nodemailer": "^7.0.7",
    "papaparse": "^5.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-node": "^10.9.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/canvas-confetti": "^1.6.4",
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^7.0.11",
    "@types/papaparse": "^5.3.15",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.3.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.12",
    "postcss": "^8.4.49",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  }
}
