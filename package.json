{
  "name": "lionheart-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3004 -H 127.0.0.1",
    "build": "prisma generate && next build",
    "postinstall": "prisma generate && npm run hooks:install",
    "start": "next start",
    "lint": "eslint src --max-warnings 999",
    "check:env": "node scripts/check-env.mjs",
    "auth:secret": "node scripts/generate-auth-secret.mjs",
    "build:deploy": "npm run check:env && npm run build",
    "check:architecture": "node scripts/check-architecture.mjs",
    "check:architecture:staged": "node scripts/check-architecture.mjs --staged",
    "hooks:install": "node scripts/install-githooks.mjs",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "smoke:campus": "node scripts/smoke-campus-auth-crud.mjs",
    "smoke:set-password": "node scripts/smoke-set-password.mjs",
    "smoke:all": "node scripts/smoke-roles-teams.mjs && node scripts/smoke-settings-permissions.mjs && node scripts/smoke-campus-auth-crud.mjs && node scripts/smoke-set-password.mjs && node scripts/test-ui-permissions.mjs",
    "smoke:it": "npm run smoke:campus",
    "smoke:http": "node scripts/smoke-http-only.mjs"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@google/genai": "^1.40.0",
    "@headlessui/react": "^2.2.9",
    "@prisma/client": "^5.22.0",
    "@tanstack/react-query": "^5.90.21",
    "@vercel/speed-insights": "^1.3.1",
    "bcryptjs": "^3.0.3",
    "jose": "^6.1.3",
    "lucide-react": "^0.564.0",
    "next": "^15.1.0",
    "nodemailer": "^8.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.4",
    "@eslint/js": "^9.39.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^7.0.11",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.3",
    "eslint-config-next": "^16.1.6",
    "postcss": "^8.4.49",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.56.1"
  }
}
